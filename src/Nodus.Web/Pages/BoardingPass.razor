@page "/boarding-pass/{ProjectId}"
@using QRCoder
@using System.Drawing
@using System.IO
@inject NavigationManager Nav

<div class="boarding-pass-container">
    <div class="header">
        <h1>üöÄ Ready to Launch!</h1>
        <p>You are registered.</p>
    </div>

    @if (QrBitmap != null)
    {
        <div class="qr-code">
            <!-- Render SVG raw or Image -->
            <img src="data:image/png;base64,@QrBitmap" style="width: 300px; height: 300px;" />
        </div>
    }

    <div class="details">
        <h2>@DecodedName</h2>
        <span class="badge">@DecodedCategory</span>
        
        <div class="stand-instruction">
            <h3>Stand: A-12</h3>
            <p>Place this screen on your table.</p>
        </div>
        
        <p class="id-text">ID: @ProjectId</p>
    </div>
    
    <button class="btn btn-outline-primary mt-4" @onclick="Print">üñ®Ô∏è Print / Save</button>
</div>

@code {
    [Parameter]
    public string ProjectId { get; set; } = string.Empty;
    
    [Parameter]
    [SupplyParameterFromQuery(Name = "name")]
    public string Name { get; set; } = "";
    
    [Parameter]
    [SupplyParameterFromQuery(Name = "cat")]
    public string Category { get; set; } = "";
    
    private string DecodedName => System.Web.HttpUtility.UrlDecode(Name);
    private string DecodedCategory => System.Web.HttpUtility.UrlDecode(Category);
    private string? QrBitmap;

    protected override void OnInitialized()
    {
        GenerateQr();
    }

    private void GenerateQr()
    {
        // Payload: "pid=ID&name=Name&cat=Category"
        // Minimal payload for the scanner
        var payload = $"pid={ProjectId}&name={Name}&cat={Category}";
        
        using var qrGenerator = new QRCodeGenerator();
        using var qrCodeData = qrGenerator.CreateQrCode(payload, QRCodeGenerator.ECCLevel.Q);
        using var qrCode = new PngByteQRCode(qrCodeData);
        var qrCodeBytes = qrCode.GetGraphic(20);
        QrBitmap = Convert.ToBase64String(qrCodeBytes);
    }
    
    private void Print()
    {
        // Simple print trigger
        // JSRuntime.InvokeVoidAsync("window.print");
    }
}

<style>
    .boarding-pass-container {
        text-align: center;
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        border: 2px dashed #ccc;
        border-radius: 12px;
        background: #fff;
    }
    .qr-code {
        margin: 2rem 0;
    }
    .stand-instruction {
        background: #e9ecef;
        padding: 1rem;
        border-radius: 8px;
        margin: 1rem 0;
    }
    .id-text {
        font-family: monospace;
        color: #6c757d;
    }
</style>
