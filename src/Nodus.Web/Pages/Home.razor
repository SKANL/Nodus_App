@page "/"
@using Nodus.Shared.Models
@using Nodus.Web.Services
@inject ProjectService ProjectService
@inject NavigationManager Navigation

<PageTitle>Panel de Control | Portal Nodus</PageTitle>

<div class="row g-4">
    <!-- Welcome Header -->
    <div class="col-12 mb-2">
        <h1 class="display-5 fw-bold text-dark">¡Bienvenido de vuelta!</h1>
        <p class="text-muted lead">Gestiona tu innovación y participa en el ecosistema Nodus.</p>
    </div>

    @if (isLoading)
    {
        <!-- Skeleton loading: mirrors the two-column layout to avoid layout shift -->
        <div class="col-md-7">
            <div class="skeleton-card">
                <div class="skeleton skeleton-badge"></div>
                <div class="skeleton skeleton-title"></div>
                <div class="skeleton skeleton-text"></div>
                <div class="skeleton skeleton-text w-75"></div>
                <div class="skeleton skeleton-text w-50"></div>
                <div class="skeleton skeleton-button"></div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="skeleton-card">
                <div class="skeleton skeleton-title"></div>
                <div class="skeleton skeleton-text"></div>
                <div class="skeleton skeleton-text"></div>
                <div class="skeleton skeleton-text w-75"></div>
            </div>
        </div>
    }
    else
    {
        <!-- Status Card -->
        <div class="col-md-7">
            @if (currentProject != null)
            {
                <div class="card-premium h-100 overflow-hidden position-relative">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div>
                            <span class="badge bg-success mb-2"><i class="bi bi-check-circle me-1"></i> Proyecto Registrado</span>
                            <h2 class="h3 mb-0">@currentProject.Name</h2>
                        </div>
                        <i class="bi bi-trophy-fill text-warning fs-1 opacity-25"></i>
                    </div>
                    
                    <p class="text-muted text-truncate-3">@currentProject.Description</p>
                    
                    <div class="mt-4 pt-3 border-top">
                        <div class="d-flex gap-2">
                            <button class="btn-premium" @onclick='() => Navigation.NavigateTo($"/display/{currentProject!.Id}")'>
                                Ver Mi Código QR
                            </button>
                            <button class="btn btn-outline-secondary rounded-pill px-4" @onclick='() => Navigation.NavigateTo("/register")'>
                                Editar Detalles
                            </button>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card-premium h-100 bg-primary text-white border-0">
                    <div class="mb-4">
                        <h2 class="h3 mb-2">¿Listo para comenzar?</h2>
                        <p class="opacity-75">No has registrado ningún proyecto aún. Regístralo ahora para habilitar la votación sin conexión.</p>
                    </div>
                    <button class="btn btn-light btn-lg rounded-pill px-5 text-primary fw-bold" @onclick='() => Navigation.NavigateTo("/register")'>
                        Registrar Proyecto
                    </button>
                    <i class="bi bi-rocket-takeoff position-absolute bottom-0 end-0 m-4 fs-1 opacity-25"></i>
                </div>
            }
        </div>

        <!-- Quick Stats / Info -->
        <div class="col-md-5">
            <div class="card-premium h-100">
                <h3 class="h5 mb-4 border-bottom pb-2">Información Nodus</h3>
                
                <div class="d-flex align-items-center mb-4">
                    <div class="bg-light p-3 rounded-circle me-3">
                        <i class="bi bi-cpu text-primary"></i>
                    </div>
                    <div>
                        <div class="fw-bold">Protocolo Firefly</div>
                        <div class="text-muted small">Activo en la red de malla (malla local)</div>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-4">
                    <div class="bg-light p-3 rounded-circle me-3">
                        <i class="bi bi-cloud-check text-success"></i>
                    </div>
                    <div>
                        <div class="fw-bold">Sincronización Cloud</div>
                        <div class="text-muted small">Atlas DB está actualizado</div>
                    </div>
                </div>

                <div class="d-flex align-items-center">
                    <div class="bg-light p-3 rounded-circle me-3">
                        <i class="bi bi-reception-4 text-info"></i>
                    </div>
                    <div>
                        <div class="fw-bold">Emisión BLE</div>
                        <div class="text-muted small">El servidor está transmitiendo nodos</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Educational Content -->
        <div class="col-12 mt-3">
            <div class="alert alert-info border-0 shadow-sm rounded-lg p-4 bg-white">
                <div class="d-flex">
                    <div class="me-4 text-info fs-1">
                        <i class="bi bi-info-square-fill"></i>
                    </div>
                    <div>
                        <h4 class="h5 fw-bold">Acerca de Nodus</h4>
                        <p class="mb-0 text-muted">
                            Nodus es un ecosistema de evaluación descentralizado diseñado para funcionar en entornos desconectados. 
                            Utilizando el <strong>Protocolo Firefly</strong>, los proyectos y votos se sincronizan a través de una 
                            red Bluetooth de Baja Energía (BLE), asegurando la integridad de los datos incluso sin acceso a internet.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private Project? currentProject;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        try 
        {
            currentProject = await ProjectService.GetCurrentProjectAsync();
        }
        finally
        {
            isLoading = false;
        }
    }
}

<style>
    .text-truncate-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .rounded-lg { border-radius: 1rem; }
    
    .bg-primary {
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%) !important;
    }
</style>