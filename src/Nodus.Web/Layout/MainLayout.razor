@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar shadow-lg @(collapseNavMenu ? "" : "show")">
        <NavMenu OnMenuItemClicked="CollapseMenu" />
    </div>

    <main class="page-enter">
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <button class="btn btn-link d-md-none text-white p-0" @onclick="ToggleNavMenu">
                <i class="bi bi-list fs-2"></i>
            </button>
            
            <div class="d-flex align-items-center ms-auto">
                <div class="user-status me-3 d-none d-sm-block">
                    <span class="badge bg-primary rounded-pill">Student Portal</span>
                </div>
                <a href="/" class="text-muted"><i class="bi bi-person-circle fs-5"></i></a>
            </div>
        </div>

        <article class="content px-4">
            <div class="container-fluid py-4">
                @Body
            </div>
        </article>
    </main>
    
    <OfflineIndicator />
</div>

@code {
    private bool collapseNavMenu = true;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void CollapseMenu()
    {
        collapseNavMenu = true;
    }
}

<style>
    .user-status {
        font-family: var(--font-heading);
        font-weight: 600;
        font-size: 0.8rem;
    }

    /* Additional responsiveness */
    @@media (max-width: 767.98px) {
        .top-row {
            background-color: var(--sidebar-bg) !important;
            padding: 0.5rem 1rem !important;
        }
    }
</style>
