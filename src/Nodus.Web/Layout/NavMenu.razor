    </div>
</nav>

@code {
    [Parameter] public EventCallback OnMenuItemClicked { get; set; }

    [Inject] private NavigationManager Navigation { get; set; } = default!;

    private async Task NotifyClicked()
    {
        if (OnMenuItemClicked.HasDelegate)
            await OnMenuItemClicked.InvokeAsync();
    }

    // Returns true when the current URL matches the given href.
    // Used for aria-current="page" — setting to null omits the attribute from the DOM.
    private bool IsCurrentPage(string href, bool exact = false)
    {
        var currentPath = new Uri(Navigation.Uri).AbsolutePath.TrimStart('/');
        if (exact || string.IsNullOrEmpty(href))
            return string.IsNullOrEmpty(currentPath) || currentPath.Equals(href, StringComparison.OrdinalIgnoreCase);
        return currentPath.StartsWith(href, StringComparison.OrdinalIgnoreCase);
    }
}

