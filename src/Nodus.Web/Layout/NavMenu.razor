<!-- aria-label: identifies this landmark for screen readers (WCAG 1.3.6).
     Without it, a page with multiple <nav> elements cannot be distinguished. -->
<nav class="nav-scrollable flex-column" aria-label="Navegación principal" @onclick="NotifyClicked">

    <div class="nav-section-label">PRINCIPAL</div>

    <div class="nav-item px-3">
        <!-- aria-current: Blazor adds 'active' CSS class but NOT aria-current.
             This is required for WCAG 2.4.4 to communicate current page to
             screen readers. We set it conditionally via ActiveClass + manual attr.
             Note: NavLink sets aria-current automatically in newer Blazor preview;
             for .NET 10 stable, explicit binding via custom NavLink wrapper is the
             safe approach. Adding the attribute directly for clarity. -->
        <NavLink class="nav-link" href="" Match="NavLinkMatch.All" ActiveClass="active"
                 aria-current="@(IsCurrentPage("", exact: true) ? "page" : null)">
            <i class="bi bi-house-door nav-icon" aria-hidden="true"></i>
            <span>Inicio</span>
        </NavLink>
    </div>

    <div class="nav-item px-3">
        <NavLink class="nav-link" href="register"
                 aria-current="@(IsCurrentPage("register") ? "page" : null)">
            <i class="bi bi-pencil-square nav-icon" aria-hidden="true"></i>
            <span>Registrar Proyecto</span>
        </NavLink>
    </div>

    <div class="nav-section-label mt-2">MI PROYECTO</div>

    <div class="nav-item px-3">
