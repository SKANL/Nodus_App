<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Senior Premium Palette: Cyber-Dark -->
    
    <!-- Core Branc Colors -->
    <Color x:Key="Primary">#6366F1</Color> <!-- Indigo 500 -->
    <Color x:Key="PrimaryDark">#4F46E5</Color> <!-- Indigo 600 -->
    <Color x:Key="PrimaryAccent">#818CF8</Color> <!-- Indigo 400 -->
    
    <Color x:Key="Secondary">#A855F7</Color> <!-- Purple 500 -->
    <Color x:Key="SecondaryAccent">#C084FC</Color> <!-- Purple 400 -->
    
    <Color x:Key="Tertiary">#0EA5E9</Color> <!-- Sky 500 -->
    <Color x:Key="Success">#10B981</Color> <!-- Emerald 500 -->
    <Color x:Key="Warning">#F59E0B</Color> <!-- Amber 500 -->
    <Color x:Key="Danger">#EF4444</Color> <!-- Red 500 -->

    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    
    <!-- Backgrounds & Surfaces -->
    <Color x:Key="DeepBackground">#0F172A</Color> <!-- Slate 900 -->
    <Color x:Key="CardBackground">#1E293B</Color> <!-- Slate 800 -->
    <Color x:Key="SurfaceLight">#334155</Color> <!-- Slate 700 -->
    <Color x:Key="BorderColor">#475569</Color> <!-- Slate 600 -->

    <!-- Grayscale / Text -->
    <Color x:Key="Gray100">#F1F5F9</Color>
    <Color x:Key="Gray200">#E2E8F0</Color>
    <Color x:Key="Gray300">#CBD5E1</Color>
    <Color x:Key="Gray400">#94A3B8</Color>
    <Color x:Key="Gray500">#64748B</Color>
    <Color x:Key="Gray600">#475569</Color>
    <Color x:Key="Gray900">#0F172A</Color>
    <Color x:Key="Gray950">#020617</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="DeepBackgroundBrush" Color="{StaticResource DeepBackground}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Danger}"/>

</ResourceDictionary>