<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Nodus.Server.ViewModels"
             x:Class="Nodus.Server.Views.ResultsPage"
             Title="Live Results">

    <Grid RowDefinitions="Auto, *">
        <Label Text="Incoming Votes" 
               FontSize="24" 
               FontAttributes="Bold" 
               Padding="20"/>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Votes}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnDefinitions="*, Auto">
                        <VerticalStackLayout>
                            <Label Text="{Binding ProjectId}" FontAttributes="Bold" />
                            <Label Text="{Binding JudgeId}" TextColor="Gray" FontSize="12"/>
                        </VerticalStackLayout>
                        <Label Grid.Column="1" 
                               Text="{Binding Timestamp, StringFormat='{0:HH:mm:ss}'}" 
                               VerticalOptions="Center" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
