<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Nodus.Server.ViewModels"
             x:Class="Nodus.Server.Views.TopologyPage"
             Title="Swarm Topology">

    <Grid RowDefinitions="Auto, *">
        <VerticalStackLayout Padding="20" Spacing="5">
            <Label Text="Active Swarm Nodes" FontSize="20" FontAttributes="Bold" />
            <Label Text="Live view of connected Judges and Relays" TextColor="Gray" FontSize="12"/>
        </VerticalStackLayout>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Nodes}" Margin="20">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="10" VerticalItemSpacing="10" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="{Binding IsRelay, Converter={StaticResource BoolToColorConverter}}" 
                           BackgroundColor="#F5F5F5"
                           CornerRadius="10"
                           HasShadow="True"
                           Padding="15">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="{Binding Label}" FontAttributes="Bold" HorizontalOptions="Center" />
                            <Label Text="{Binding Id}" FontSize="10" TextColor="Gray" HorizontalOptions="Center"/>
                            
                            <!-- Status Indicator -->
                            <BoxView Color="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                     HeightRequest="10" WidthRequest="10"
                                     CornerRadius="5"
                                     HorizontalOptions="Center" />
                            
                            <Label Text="{Binding Rssi, StringFormat='RSSI: {0} dBm'}" 
                                   FontSize="10" 
                                   HorizontalOptions="Center"
                                   IsVisible="{Binding IsRelay, Converter={StaticResource InvertedBoolConverter}}"/> <!-- Assuming server doesn't show RSSI to self -->
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
