<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Nodus.Server.ViewModels"
             x:Class="Nodus.Server.Views.CreateEventPage"
             Title="Setup New Event">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            
            <Label Text="Event Configuration" Style="{StaticResource Headline}" />

            <Entry Placeholder="Event Name" Text="{Binding EventName}" />
            
            <Entry Placeholder="Judge Password (Shared Secret)" 
                   IsPassword="True" 
                   Text="{Binding JudgePassword}" />

            <Editor Placeholder="Categories (comma separated)" 
                    Text="{Binding Categories}"
                    HeightRequest="100" />

            <Button Text="Generate Event &amp; QRs" 
                    Command="{Binding CreateAndGenerateCommand}" />

            <HorizontalStackLayout IsVisible="{Binding IsGenerated}" Spacing="20" HorizontalOptions="Center">
                <VerticalStackLayout Spacing="10">
                    <Label Text="JUDGE ACCESS (APP)" HorizontalOptions="Center" FontAttributes="Bold" />
                    <Image Source="{Binding JudgeQrCode}" HeightRequest="250" WidthRequest="250" />
                    <Label Text="Scan with Nodus App" HorizontalOptions="Center" FontSize="12" />
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="10">
                    <Label Text="STUDENT REG (WEB)" HorizontalOptions="Center" FontAttributes="Bold" />
                    <Image Source="{Binding StudentQrCode}" HeightRequest="250" WidthRequest="250" />
                    <Label Text="Scan to Register Project" HorizontalOptions="Center" FontSize="12" />
                </VerticalStackLayout>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
